<div class="space-y-16 container xl:max-w-7xl mx-auto px-4 py-16 lg:px-8 lg:py-32">
  <div class="text-center">
    <h2 class="text-3xl md:text-4xl font-extrabold mb-4 text-primary">
      My posts
    </h2>
    <h3 class="text-lg md:text-xl md:leading-relaxed font-medium text-secondary lg:w-2/3 mx-auto">
        See my latest posts thats I'm write.
    </h3>
  </div>
  <div class="flex flex-row flex-wrap justify-center gap-2 md:gap-8 w-full">
    {% for post in collections.post %}
      <a href="{{ post.url }}" class="py-5 cursor-pointer lg:w-2/5 medium:w-2/5 group">
        <div class="p-[1px] bg-onBackground rounded-lg mb-2 transition">
          <div class="rounded-lg overflow-clip">
          {% image post.data.coverImage, post.data.coverAlt %}
          </div>
        </div>
        <h4 class="text-lg font-bold mb-2 text-neutral group-hover:text-primary group-hover:underline">
          {{ post.data.title }}
        </h4>
        <p class="leading-relaxed text-secondary mb-3">
          {{ post.data.description }}
        </p>

        <div class="flex flex-row flex-wrap w-full gap-1 text-center">
          {% for tag in post.data.tags %}
            <div>
              <div class="font-semibold inline-flex px-2 py-1 leading-4 text-sm rounded text-onTertiary bg-tertiary">{{ tag }}</div>
            </div>
          {% endfor %}
        </div>
      </a>
    {% endfor %}
  </div>
</div>
